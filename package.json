{
  "name": "scrooge-bank-api",
  "version": "1.0.0",
  "description": "Backend API for Scrooge Bank",
  "main": "dist/main.js",
  "scripts": {
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:prod": "node dist/main.js",
    "build": "nest build",
    "db:dev:migrate": "dotenv -e .env -- prisma migrate dev --name init",
    "db:dev:reset": "dotenv -e .env -- prisma migrate reset --force",
    "db:dev:seed": "dotenv -e .env -- ts-node prisma/seed.ts",
    "db:test:migrate": "dotenv -e .env.test -- prisma migrate dev --name init",
    "db:test:reset": "dotenv -e .env.test -- prisma migrate reset --force",
    "db:test:seed": "dotenv -e .env.test -- ts-node prisma/seed.ts",
    "test:e2e": "dotenv -e .env.test -- jest --config jest-e2e.config.ts --runInBand"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/swagger": "^11.2.0",
    "@prisma/client": "^5.0.0",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "express-rate-limit": "^6.7.0",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.14",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@types/passport-jwt": "^3.0.13",
    "@types/passport-local": "^1.0.38",
    "@types/supertest": "^2.0.12",
    "dotenv-cli": "^9.0.0",
    "jest": "^29.5.0",
    "prisma": "^5.0.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.2",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  }
}
